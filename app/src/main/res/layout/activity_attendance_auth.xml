<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder_dialog"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/hrtc_green"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Perform Authentication/eKYC"
                            android:textColor="@color/white"
                            android:textSize="15sp" />



                        <!-- Rested Case -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rented"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#fff"
                                android:elevation="4dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center|center_vertical|center_horizontal"
                                    android:padding="5dp"
                                    android:text="Aadhaar Number"
                                    android:visibility="visible"
                                    android:textColor="@color/darkblue" />


                                <TextView
                                    android:id="@+id/aadhaar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="visible"
                                    android:maxLength="12"
                                    android:inputType="number"
                                    android:text="538698689854"
                                    android:gravity="center_vertical|center|center_horizontal"
                                    android:textColor="@color/red" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#fff"
                                android:layout_margin="2dp"
                                android:elevation="4dp"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:padding="5dp"
                                    android:text="HimAccess Email"
                                    android:textColor="@color/darkblue" />


                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="8dp"
                                    android:layout_weight="1"
                                    android:inputType="textEmailAddress"
                                    android:text="Kush Kuamr Dhawan Kush Kuamr Dhawan"
                                    android:gravity="center_vertical|left|center_horizontal"
                                    android:textColor="@color/red" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                android:layout_margin="2dp"
                                android:elevation="4dp"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical|center_horizontal"
                                    android:padding="5dp"
                                    android:text="HimAccess Mobile Number"
                                    android:textColor="@color/darkblue" />


                                <TextView
                                    android:id="@+id/mobile_citizen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingStart="8dp"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:text="9459619235"
                                    android:gravity="center_vertical|left|center_horizontal"
                                    android:textColor="@color/red" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/et_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/customborder_dialog"
                android:text="• Click on the below Image to mark your attenance and Proceed.\n \n • Make sure to Install the UIDAI Face Authntication Application before marking the attendance. \n \n • Hold the camera steady while scanning \n \n • Click to View Consent"
                android:gravity="start|center_vertical" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#fff"
                android:elevation="4dp"
                android:id="@+id/blink_container">

                <ImageView
                    android:id="@+id/face_auth_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/face_auth"
                    android:scaleType="fitCenter"
                    android:contentDescription="Face Authentication" />
            </FrameLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/navyblue"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Back"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/verify"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Proceed"
                    android:textColor="#ffffffff" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>